<link  rel="stylesheet" href="/css/login.css"></link>
<link
      rel="icon"
      href="https://www.freepnglogos.com/uploads/shopee-logo-png/shopee-logo-shop-with-the-gentlemen-collection-and-win-the-shopee-0.png"
      type="image/x-icon"
    />
<div class ="row">
	<div class="col-md-6 mx-auto p-0">
		<div class="card">
			<div class="login-box">
					<div class="login-snip">
						<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Đăng Nhập</label>
						<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Đăng Ký</label>
						<div class="login-space">
							<div class="login">
								<div class="group">
									<label for="user" class="label">Tài Khoản</label>
									<input id="user" type="text" class="input"  placeholder="Vui lòng nhập tài khoản">
									<div id="validateUserNamee" >
											
									</div>
								</div>
								<div class="group">
									<label for="pass" class="label">Mật Khẩu</label>
									<input id="pass" type="password" class="input" data-type="password" placeholder="Vui lòng nhập mật khẩu">
									<div id="validatePassWordd" >
											
									</div>
								</div>
								
								<div class="group">
									<input onclick="submitLogin()" type="submit" class="button" value="Đăng Nhập">
								</div>
								<div class="hr"></div>
								<div class="foot">
									<label id="backtoHome">Quay về trang chủ</label>
								</div>
							</div>
							<div class="sign-up-form">
								<div class="group ">
									<label for="userName" class="label">Tài Khoản</label>
									<input id="userName"  type="text" class="input" placeholder="Tài Khoản" required>
									<div id="validateUserName" >

									</div>
								</div>
								<div class="group">
									<label for="passW" class="label">Mật Khẩu</label>
									<input id="passW"  type="password" class="input" data-type="password" placeholder="Mật Khẩu">
									<div id="validatePassWord" >
											
									</div>
								</div>
								<div class="group">
									<label for="email" class="label">Địa Chỉ Email</label>
									<input id="email"  type="email" class="input" placeholder="Địa Chỉ Email">
									<div id="validateEmail" >
											
									</div>
								</div>
								<div class="group">
									<input onclick="submitRegister()"  type="submit" class="button" value="Đăng Ký">
								</div>
								<div class="hr"></div>
								<div class="foot">
									<label for="tab-1">Đã có tài khoản ?</label>
								</div>
							</div>
						</div>
				</div>
				
			</div>   
		</div>
	</div>
</div>
