<div class="container-fluid mt-4 mb-4">
    <div class="row">
        <div class="col-md-8">
            <h1>THÔNG TIN GIAO HÀNG</h1>
            <div class="row">
                <div class="col-md-6">
                    <div class="textfield-outlined">
                        <input id="fullName" type="text" placeholder=" ">
                        <label for="fullName">Họ và tên</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="textfield-outlined">
                        <input id="phoneNumber" type="text" placeholder=" ">
                        <label for="phoneNumber">Số điện thoại</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="textfield-outlined">
                        <input id="email" type="text" placeholder=" ">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <select id="country" class='form-control'>
                        <option value="">-- Quốc gia --</option>
                    </select>               
                </div>
                <div class="col-md-12 mt-2">     
                    <select id="region" class='form-control'><option value="">-- Thành phố --</option></select>            
                </div>
                <div class="col-md-12 mt-2">               
                    <select id="city" class='form-control'><option value="">-- Quận / Huyện --</option></select>                      
                </div>
                <div class="col-md-12">
                    <div class="textfield-outlined">
                        <input id="address" type="text" placeholder=" ">
                        <label for="address">Địa chỉ</label>
                    </div>
                </div> 
                <div class="col-md-12">
                    <div class="textfield-outlined">
                        <textarea id="notes" cols="30" rows="10" placeholder=" "></textarea>
                        <label for="notes">Ghi chú</label>
                    </div>
                </div>
            </div>
            <div class="submit">
                <a href="/shoppingCart"><button type="button" class="btn btn-secondary">Quay lại &#8592;</button></a>
                <a href="/"><button type="button" class="btn btn-primary">Trang chủ &#8592;</button></a>
                <button type="button" onclick="confirmOrder()" class="btn btn-success">Đồng ý</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="summary">
                <h2>TÓM TẮT ĐƠN HÀNG</h2>
                
            </div>
            <div class="cartDetail mt-3">
                  <h2>CHI TIẾT VỀ ĐƠN HÀNG</h2>
            </div>
        </div>
    </div>
</div>
